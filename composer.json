{
  "name": "itsmestevieg/konstruct",
  "description": "Universal PHP configuration framework with automatic environment detection and path resolution",
  "type": "library",
  "keywords": [
    "configuration",
    "environment",
    "framework",
    "php",
    "multi-environment",
    "path-resolution",
    "auto-detection"
  ],
  "homepage": "https://github.com/itsmestevieg/konstruct",
  "license": "MIT",
  "authors": [
    {
      "name": "Stevie G",
      "email": "ItsMeStevieG@users.noreply.github.com",
      "homepage": "https://github.com/itsmestevieg",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0|^10.0",
    "squizlabs/php_codesniffer": "^3.6",
    "phpstan/phpstan": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Konstruct\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Konstruct\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "analyse": "phpstan analyse",
    "quality": [
      "@cs-check",
      "@analyse",
      "@test"
    ]
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  }
}
